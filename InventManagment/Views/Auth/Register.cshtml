@{
    ViewData["Title"] = "Register";
}

<!-- User registration form page -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Register</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <!-- Username field -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" id="username" class="form-control" required />
                            @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
                            {
                                <span class="text-danger">@ViewData.ModelState["Username"].Errors.First().ErrorMessage</span>
                            }
                        </div>
                        
                        <!-- Email field -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" class="form-control" required />
                            @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
                            {
                                <span class="text-danger">@ViewData.ModelState["Email"].Errors.First().ErrorMessage</span>
                            }
                        </div>
                        
                        <!-- Password field -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-control" required />
                        </div>
                        
                        <!-- Form buttons -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Login" class="btn btn-secondary">
                                    <i class="fas fa-sign-in-alt"></i> Back to Login
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-user-plus"></i> Register
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 