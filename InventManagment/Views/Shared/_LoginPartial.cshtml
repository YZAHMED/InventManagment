<!-- Navigation bar login section -->
<!-- This shows user info in the top right of the navbar -->
<ul class="navbar-nav">
    @if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
    {
        <!-- Show user info when logged in -->
        <li class="nav-item">
            <span class="nav-link text-dark">
                <i class="fas fa-user"></i> Welcome, @Context.Session.GetString("Username")
            </span>
        </li>
        <li class="nav-item">
            <a asp-controller="Auth" asp-action="Logout" class="nav-link text-dark">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </li>
    }
    else
    {
        <!-- Show login/register links when not logged in -->
        <li class="nav-item">
            <a asp-controller="Auth" asp-action="Login" class="nav-link text-dark">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </li>
        <li class="nav-item">
            <a asp-controller="Auth" asp-action="Register" class="nav-link text-dark">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </li>
    }
</ul>
